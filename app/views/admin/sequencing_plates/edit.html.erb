<div class="page-header">
	<h1><i class="icon-resize-small"> </i>Update <%= @sequencing_plate.name %></h1>
</div>
<p>
	<%= simple_form_for([:admin, @sequencing_plate], :html => {:class => 'form-horizontal' }) do |f| %>
		
		<ul class="nav nav-tabs">
	    <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
	  </ul>
	
		<div class="tab-content">
			<div class="tab-pane active" id="info">
				<%= f.association :status, :collection => @statuses %>
			</div>
	  </div>
	
		<div class="form-actions">
			<%= f.button :submit, 'Save', :class => 'btn btn-primary'%>
			<%= link_to 'Cancel', admin_sequencing_plates_path, :class => 'btn'%>
		</div>
	<% end %>
</p>
