<div class="page-header">
	<h1><i class="icon-resize-small"> </i>Sequencing Plate <%= @sequencing_plate.name %></h1>
</div>
<div class="tabbable">
	
  <ul class="nav nav-tabs">
		<li class="active"><a href="#info" data-toggle="tab"><%= @sequencing_plate.name %></a></li>
  </ul>

  <div class="tab-content">
		<div class="tab-pane active" id="info">
			<div class="row-fluid">
				<div class="span4">
					<%= render :partial => "layouts/commons/plates/seq_plate_96_wells", :locals => {:plate => @sequencing_plate.index_by_well }%>
				
					<dl class="dl-horizontal">
						<dt>Date</dt>
						<dd><%= @sequencing_plate.created_at %></dd>
						<dt>Status</dt>
						<dd><%= @sequencing_plate.status %></dd>		
          </dl>
          <i class="icon-download-alt"> </i><%= link_to 'Download FASTA file', :action => :fasta, :id => @sequencing_plate.id     %>
				</div>
				<div class="span6">
					<%= render :partial => "admin/sequencing_plates/plate_legend", :locals => {:index => @sequencing_plate.index_by_part }%>
				</div>
			</div>
		</div>
		<div class="form-actions">
			<%= link_to 'Update', edit_admin_sequencing_plate_path(@sequencing_plate), :class => 'btn'%>
		</div>
	</div>
</div>
