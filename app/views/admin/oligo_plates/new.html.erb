<div class="page-header">
	<h1><i class="icon-folder-open"> </i>Import Oligo Plates</h1>
</div>
<p>
	<%= simple_form_for([:admin,@plate], :html => {:class => 'form-horizontal' }) do |f| %>
		<ul class="nav nav-tabs">
	    <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
	  </ul>

		<div class="tab-content">
      <div class="tab-pane active" id="info">
        <p><i class='icon-info-sign'> </i>Note: only csv file accepted. The uploaded file should have the following columns (header should not be included):</p>
        <ol>
          <li>Plate Name</li>
          <li>Well (e.g. A01)</li>
          <li>Part Name</li>
          <li>Oligo Name</li>
          <li>Oligo Sequence</li>
        </ol>
        <b>Upload a csv file</b> <%= f.file_field :file %>
			</div>
	  </div>

		<div class="form-actions">
			<%= f.button :submit, 'Save', :class => 'btn btn-primary'%>
			<%= link_to 'Cancel', admin_oligo_plates_path, :class => 'btn'%>
		</div>
	<% end %>
</p>
