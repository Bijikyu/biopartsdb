<div class="page-header">
	<h1><i class="icon-repeat"> </i>Trasnformation <%= @transformation.id %></h1>
</div>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#info" data-toggle="tab"><%= @transformation.ligation_product %></a></li>
	<li><a href="#protocol" data-toggle="tab">Protocol</a></li>
  </ul>

  <div class="tab-content">
		<div class="tab-pane active" id="info">
			<p>
				<dl class="dl-horizontal">
		
				<dt>White</dd>
				<dd><%= @transformation.white_count %></dd>

				<dt>Blue</dd>
				<dd><%= @transformation.blue_count %></dd>

				<dt>Light Blue</dd>
				<dd><%= @transformation.light_blue_count %></dd>
		
				<dl class="dl-horizontal">
				<dt>Strain</dd>
				<dd><%= @transformation.strain %></dt>

				<dt>Status</dd>
				<dd><%= @transformation.status %></dt>

				<dt>Quality Control</dd>
				<dd><%= @transformation.status %></dt>

				<dt>Date</dd>
				<dd><%= @transformation.created_at %></dt>		
				</dl>
	
				<%= link_to 'Update', edit_transformation_path(@transformation), :class => 'btn'%>
			</p>
			
		</div>

	
	<div class="tab-pane" id="protocol">
		<%= raw @transformation.protocol.content %>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Reagent</th>
					<th>Stock Concentration</th>
					<th>Final Concentration</th>
					<th>Volume for One Reaction</th>
					<th>Volume for <%= 1 + @transformation.protocol.scaling_factor %> Reactions</th>
				</tr>
			</thead>
			<tbody>
				<% @transformation.protocol.protocol_reagents.each do |r| %>
					<tr>
						<td><%= r.name %></td>
						<td><%= r.stock_concentration %></td>
						<td><%= r.final_concentration %></td>
						<td><%= r.volume_reaction %></td>
						<td><%= Unit(r.volume_reaction) * (1 + @transformation.protocol.scaling_factor)%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>