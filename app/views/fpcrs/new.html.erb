<div class="page-header">
	<h1><i class="icon-random"> </i>New fPCR</h1>
</div>
<p>
	<%= simple_form_for(@fpcr, :html => {:class => 'form-horizontal' }) do |f| %>
		
		<ul class="nav nav-tabs">
	    <li class="active"><a href="#tpcrs" data-toggle="tab">tPCRs</a></li>
	    <li><a href="#info" data-toggle="tab">Info</a></li>
	  </ul>

		<div class="tab-content">
			<div class="tab-pane active" id="tpcrs">
				<%= f.association :tpcr_products, :collection => current_user.tpcr_products.reaction_pass, :as => :check_boxes %>
			</div>
			<div class="tab-pane" id="info">
				<%= f.association :device, :collection => @devices %>
				<%= f.input :note %>
			</div>
	  </div>

		<div class="form-actions">
			<%= f.button :submit, 'Save', :class => 'btn btn-primary'%>
			<%= link_to 'Cancel', fpcrs_path, :class => 'btn'%>
		</div>
	<% end %>
</p>

