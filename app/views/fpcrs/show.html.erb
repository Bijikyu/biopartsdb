<div class="page-header">
	<h1><i class="icon-random"> </i>fPCR <%= @fpcr.id %></h1>
</div>
	<div class="tabbable">
	  <ul class="nav nav-tabs">
	    <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
	    <li><a href="#plate" data-toggle="tab">Plate</a></li>
	    <li><a href="#protocol" data-toggle="tab">Protocol</a></li>
	  </ul>
	
	  <div class="tab-content">
			<div class="tab-pane active" id="info">
		    <table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Parts</th>
						</tr>
					</thead>
					<tbody>		
						<% @fpcr.fpcr_products.each do |product| %>
							<tr>
								<td><%= product.tpcr_product.part.name  %></td>	
							</tr>
						<% end %>
					</tbody>
				</table>

				<dl class="dl-horizontal">
					<dt>Status</dd>
					<dd><%= @fpcr.status.name %></dt>
					<dt>Device</dd>
					<dd><%= @fpcr.device.name %></dt>
					<dt>Date</dd>
					<dd><%= @fpcr.created_at %></dt>		
				</dl>
				
				<%= link_to 'Update', edit_fpcr_path(@fpcr), :class => 'btn'%>
			</div>
			<div class="tab-pane" id="plate">
			</div>
			<div class="tab-pane" id="protocol">
				<p><%= raw @fpcr.protocol.content %></p>
				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Reagent</th>
							<th>Stock Concentration</th>
							<th>Final Concentration</th>
							<th>Volume for One Reaction</th>
							<th>Volume for <%= @fpcr.fpcr_products.size + @fpcr.protocol.scaling_factor %> Reactions</th>
						</tr>
					</thead>
					<tbody>
						<% @fpcr.protocol.protocol_reagents.each do |r| %>
							<tr>
								<td><%= r.name %></td>
								<td><%= r.stock_concentration %></td>
								<td><%= r.final_concentration %></td>
								<td><%= r.volume_reaction %></td>
								<td><%= Unit(r.volume_reaction) * (@fpcr.fpcr_products.size + @fpcr.protocol.scaling_factor)%></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
	  </div>
	</div>
	
</p>
