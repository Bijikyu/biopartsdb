<div class="page-header">
	<h1><i class="icon-random"> </i>fPCR <%= @fpcr.id %></h1>
</div>
	<div class="tabbable">
	  <ul class="nav nav-tabs">
	    <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
		<li><a href="#protocol" data-toggle="tab">Protocol</a></li>
	    <li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">Growth Plates<b class="caret"></b></a>
			<ul class="dropdown-menu">
				<% @fpcr.fpcr_products.each do |product| %>
				<li><a href="#<%= product.part.name %>" data-toggle="tab"><%= product.part.name %></a></li>
				<% end %>
			</ul>
		</li>
	  </ul>
	
	  <div class="tab-content">
			<div class="tab-pane active" id="info">
		    <table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Parts</th>
						</tr>
					</thead>
					<tbody>		
						<% @fpcr.fpcr_products.each do |product| %>
							<tr>
								<td>
									<%= product.tpcr_product.part.name  %>
									<% if !product.quality_control.nil? and product.quality_control.name == "PASS" %>
										<span class="label label-success"> PASS </span>
									<% end %>
								</td>	
							</tr>
						<% end %>
					</tbody>
				</table>

				<dl class="dl-horizontal">
					<dt>Status</dd>
					<dd><%= @fpcr.status.name %></dt>
					<dt>Device</dd>
					<dd><%= @fpcr.device.name %></dt>
					<dt>Date</dd>
					<dd><%= @fpcr.created_at %></dt>		
				</dl>
				
				<%= link_to 'Update', edit_fpcr_path(@fpcr), :class => 'btn'%>
			</div>
			
			<% @fpcr.fpcr_products.each do |product| %>
				<div class="tab-pane" id="<%= product.part.name %>">
					<p>
						<%= render :partial => "layouts/plate_96_wells", :locals => {:plate => product.part.wells_index }%>
					</p>
				</div>
			<% end %>
			
			<div class="tab-pane" id="protocol">
				<%= render :partial => "protocols/protocol_index", :locals => {:protocol => @fpcr.protocol, :number_reactions => @fpcr.tpcr_products.size }%>
			</div>
	  </div>
	</div>
	
</p>
