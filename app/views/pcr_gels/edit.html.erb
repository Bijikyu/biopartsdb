<div class="page-header">
	<h1><i class="icon-picture"> </i>Update PCR Gel <%= @pcr_gel.id %></h1>
</div>
<p>
	<%= simple_form_for(@pcr_gel, :html => {:class => 'form-horizontal' }) do |f| %>
		
		<ul class="nav nav-tabs">
	    	<li class="active"><a href="#apcrs" data-toggle="tab">sPCRs</a></li>
	    	<li><a href="#tpcrs" data-toggle="tab">tPCRs</a></li>
	    	<li><a href="#fpcrs" data-toggle="tab">fPCRs</a></li>
	  	</ul>

	  <div class="tab-content">
			<div class="tab-pane active" id="spcrs">
				<%= f.association :spcr_products do |p| %>
					<%= p.association :quality_control, :collection => @quality_control, :label => "#{p.object.part.name}" %>
				<% end %>
			</div>
			<div class="tab-pane" id="tpcrs">
				<%= f.association :tpcr_products do |p| %>
					<%= p.association :quality_control, :collection => @quality_control, :label => "#{p.object.part.name}" %>
				<% end %>
			</div>
			<div class="tab-pane" id="fpcrs">
				<%= f.association :fpcr_products do |p| %>
					<%= p.association :quality_control, :collection => @quality_control, :label => "#{p.object.tpcr_product.part.name}"  %>
				<% end %>
			</div>
		
		
		
		
		<%= f.association :status, :collection => @statuses %>
		
		<div class="form-actions">
			<%= f.button :submit, 'Update', :class => 'btn btn-primary'%>
			<%= link_to 'Cancel', pcr_gel_path(@pcr_gel), :class => 'btn'%>
		</div>
	<% end %>
</p>
